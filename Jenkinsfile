pipeline {
    
    agent any

    stages {

        stage('Stage 1') {
            steps {
                sh 'echo HELLO STAGE 1'
            }
        }

        stage('Stage 2') {
            steps {
                sh 'sleep 60'
            }
        }

        stage('Stage 3') {
            steps {
                sh 'echo HELLO STAGE 3'
            }
        }

    }

}